
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /comments/{commentId} {
      // Only allow reads from anyone
      allow read: if true;
      
      // Only allow writes from your Cloudflare Worker
      allow write: if request.auth.token.sub == 'cloudflare-worker@briefsnap.iam.gserviceaccount.com';
    }
    
    // ... other rules ...
  }
}